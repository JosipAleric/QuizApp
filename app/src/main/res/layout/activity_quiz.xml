<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0FA0FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Kviz"
            android:textAlignment="center"
            android:textColor="#FEFEFE"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/bubble1"
            android:layout_width="117dp"
            android:layout_height="112dp"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/bubble" />

        <ImageView
            android:id="@+id/bubble2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-70dp"
            android:background="@drawable/bubble" />

        <ImageView
            android:id="@+id/bubble3"
            android:layout_width="117dp"
            android:layout_height="112dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="-50dp"
            android:background="@drawable/bubble" />

        <ImageView
            android:id="@+id/bubble4"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-75dp"
            android:background="@drawable/bubble" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="-45dp"
            android:background="@drawable/background_with_radius"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/questionProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Pitanje 1/5"
                android:textAlignment="center"
                android:textColor="#0F9FFA"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/questionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/poppins_medium"
                android:text="textView"
                android:textAlignment="center"
                android:textColor="#373737"
                android:textSize="22sp" />


            <RadioGroup
                android:id="@+id/answerOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="RadioButton1"
                    android:textColor="@drawable/radio_button_text"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="13dp"
                    android:text="RadioButton2"
                    android:textColor="@drawable/radio_button_text"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/answer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="13dp"
                    android:text="RadioButton3"
                    android:textColor="@drawable/radio_button_text"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/answer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="13dp"
                    android:text="RadioButton4"
                    android:textColor="@drawable/radio_button_text"
                    android:textSize="15sp" />
            </RadioGroup>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="#0F9FFA"
                android:fontFamily="@font/poppins_regular"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="IduÄ‡e pitanje"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>